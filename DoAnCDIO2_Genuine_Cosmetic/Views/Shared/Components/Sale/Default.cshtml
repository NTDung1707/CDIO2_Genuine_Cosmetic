@model IEnumerable<DoAnCDIO2_Genuine_Cosmetic.ViewModels.SaleVM>

@foreach (var item in Model)
{
    <div class="border border-primary rounded position-relative vesitable-item" style="background-color:white;">
        <div class="vesitable-img">
            <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh">
                <img src="~/img_sp/@item.Hinh" class="img-fluid w-100 rounded-top" alt="" >
            </a>
        </div>
        <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px; background-color:#d52c2c !important;">-@item.GiamGia%</div>
        <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@item.TenLoai</div>
        <div class="p-4 pb-0 rounded-bottom">
            <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh">
                <h4>@item.TenLoai</h4>
                <p>@item.TenHh </p>
            </a>
            <div class="d-flex justify-content-between flex-lg-wrap">
                <p class="text-dark fs-5 fw-bold">
                    <span style="color: #FFA500">@item.GiaSauGiam.ToString("N0") VND</span>
                    <span style="text-decoration: line-through; font-size:small">     @item.DonGia.ToString("N0") VND</span>
                </p>
            </div>
        </div>
    </div>
}